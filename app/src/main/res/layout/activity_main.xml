<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="org.nachosapps.weatherapplication.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/txtLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:text=""
            android:textColor="@color/text_transparent_black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="05 02 2017 07:22"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/btnRefresh"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:id="@+id/txtCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:text=""
            android:textColor="@color/text_transparent_black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Poznan, PL"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp" />
        <Button
            android:id="@+id/btnRefresh"
            android:layout_marginStart="5dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:drawableTop="@mipmap/btn_refresh24"
            android:background="@android:color/transparent"
            android:layout_alignBottom="@id/txtLastUpdate"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/txtCelsius"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/btnRefresh"
            android:gravity="right"
            android:text="0,00Â°C"
            android:textColor="@color/text_transparent_black"
            android:textSize="42sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/btnRefresh" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="Rome wasn't build in a day. Your weather description is incoming."
            android:textColor="@color/text_transparent_black"
            android:textSize="42sp"
            android:textStyle="bold"
            tools:targetApi="o" />

    </ScrollView>

</LinearLayout>
